{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "experimentalDecorators": true
    },
    "include": ["**/*.ts", "**/*.js"],
    "exclude": ["node_modules", "dist"]
}
